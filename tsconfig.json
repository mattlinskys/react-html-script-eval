{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2015", "DOM"],
    "module": "ES2020",
    "jsx": "preserve",
    "rootDir": "./src",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
